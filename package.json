{
  "name": "@tinsep19/kiwumil",
  "version": "0.1.0",
  "description": "TypeScript library for automatic UML diagram layout using @lume/kiwi constraint solver",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun --minify && tsc --emitDeclarationOnly --outDir dist",
    "prepublishOnly": "bun run build",
    "test": "bun test && bun run test:types",
    "test:types": "tsc --emitDeclarationOnly --outDir dist && tsd --tsconfig tsconfig.tsd.json --files \"tsd/**/*.test-d.ts\"",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\""
  },
  "keywords": [
    "uml",
    "diagram",
    "layout",
    "constraint-solver",
    "cassowary",
    "kiwi",
    "typescript",
    "svg"
  ],
  "author": "Kousuke Taniguchi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tinsep19/kiwumil.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/",
    "access": "public",
    "tag": "latest"
  },
  "bugs": {
    "url": "https://github.com/tinsep19/kiwumil/issues"
  },
  "homepage": "https://github.com/tinsep19/kiwumil#readme",
  "devDependencies": {
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "tsd": "^0.31.0",
    "typescript": "^5"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@lume/kiwi": "^0.4.4"
  }
}
